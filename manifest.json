{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "description": "__MSG_description__",
  "applications": {
    "gecko": {
      "id": "urlTransformer@bibcnrs.com"
    }
  },
  "icons": {
    "48": "icons/bibcnrs-48.png"
  },
  "page_action": {
    "default_icon": "icons/bibcnrs-48.png",
    "default_title": "__MSG_action_title__",
    "show_matches": ["<all_urls>"]
  },
  "permissions": [
    "activeTab",
    "storage",
    "menus",
    "notifications"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["main.js"]
  },
  "default_locale": "en"
}
