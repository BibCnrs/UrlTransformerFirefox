{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "description": "__MSG_description__",
  "applications": {
    "gecko": {
      "id": "urlTransformer@bibcnrs.com"
    }
  },
  "icons": {
    "48": "icons/bibcnrs-48.png"
  },
  "browser_action": {
    "default_icon": "icons/bibcnrs-48.png",
    "default_title": "__MSG_action_title__"
  },
  "permissions": [
    "activeTab",
    "storage",
    "menus",
    "contextMenus",
    "notifications"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "main.js"
    ]
  },
  "default_locale": "en"
}
