{

  "manifest_version": 2,
  "name": "Bibcnrs url transformer",
  "version": "1.0",

  "description": "Allow to authenticate on editor site using your bibcnrs account",

  "applications": {
    "gecko": {
      "id": "urlTransformer@bibcnrs.com"
    }
  },

  "icons": {
    "48": "icons/bibcnrs-48.png"
  },
  "browser_action": {
    "default_icon": "icons/bibcnrs-48.png",
    "default_title": "Authentify with bibcnrs"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "background": {
    "scripts": ["main.js"]
  }
}
